{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@api-base/*": ["../../packages/api-base/src/*"],
      "api-definitions/*": ["../../packages/api-definitions/src/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
