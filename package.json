{
  "name": "schoolcampus",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-daemon --filter=./apps/api  --filter=./apps/frontend",
    "dev:all": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "api:pre-dev": "turbo run api:pre-dev --filter=./packages/api-definitions --filter=./packages/api-base"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}